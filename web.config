<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- Redireciona /medicamentos para o controller de medicamentos -->
                <rule name="Medicamentos Route" stopProcessing="true">
                    <match url="^medicamentos/?$" />
                    <action type="Rewrite" url="index.php?controller=medicamentos&amp;action=index" />
                </rule>
                
                <!-- Redireciona /medicamentos/view/123 para visualização -->
                <rule name="Medicamentos View Route" stopProcessing="true">
                    <match url="^medicamentos/view/([0-9]+)/?$" />
                    <action type="Rewrite" url="index.php?controller=medicamentos&amp;action=view&amp;id={R:1}" />
                </rule>
                
                <!-- Redireciona /medicamentos/search para busca -->
                <rule name="Medicamentos Search Route" stopProcessing="true">
                    <match url="^medicamentos/search/?$" />
                    <action type="Rewrite" url="index.php?controller=medicamentos&amp;action=search" />
                </rule>
                
                <!-- Redireciona /procedimentos para o controller de procedimentos -->
                <rule name="Procedimentos Route" stopProcessing="true">
                    <match url="^procedimentos/?$" />
                    <action type="Rewrite" url="index.php?controller=procedimento&amp;action=index" />
                </rule>
                
                <!-- Redireciona /procedimentos/view/123 para visualização -->
                <rule name="Procedimentos View Route" stopProcessing="true">
                    <match url="^procedimentos/view/([0-9]+)/?$" />
                    <action type="Rewrite" url="index.php?controller=procedimento&amp;action=view&amp;id={R:1}" />
                </rule>
                
                <!-- Redireciona /procedimentos/search para busca -->
                <rule name="Procedimentos Search Route" stopProcessing="true">
                    <match url="^procedimentos/search/?$" />
                    <action type="Rewrite" url="index.php?controller=procedimento&amp;action=search" />
                </rule>
                
                <!-- Redireciona a raiz para procedimentos (default) -->
                <rule name="Root Route" stopProcessing="true">
                    <match url="^$" />
                    <action type="Rewrite" url="index.php?controller=dashboard&amp;action=index" />
                </rule>
            </rules>
        </rewrite>
        
        <!-- Configurações de diretório -->
        <directoryBrowse enabled="false" />
        
        <!-- Configurações padrão para arquivos PHP -->
        <defaultDocument>
            <files>
                <clear />
                <add value="index.php" />
            </files>
        </defaultDocument>
    </system.webServer>
</configuration>